# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
max_line_length = 120

[*.html]
quote_type = double

[*.{ts,js}]
quote_type = single
file_header_template = Copyright (c) Laserfiche.\nLicensed under the MIT License. See LICENSE in the project root for license information.

[*.md]
max_line_length = off
trim_trailing_whitespace = false
